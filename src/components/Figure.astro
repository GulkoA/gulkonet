---
import Img from '../components/Img.astro'
import Gallery from '../components/Gallery.astro'

const { filenames, alt, caption} = Astro.props
---

<figure style={{width: "fit-content", height: "100%"}} class="center">
  <Gallery>
    {filenames.map((filename: string) => (
      <Img filename={filename} alt={alt} draggable={false} height="500"/>
    ))}
  </Gallery>
  {caption && <figcaption>{caption}</figcaption>}
</figure>
