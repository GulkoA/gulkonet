---
const {title, titleClass, subtitle, backgroundColor, secondaryColor} = Astro.props;
---

<div class="heading" style={`background-color: ${backgroundColor}`}>
  <div class="heading-left">
    <slot />
  </div>
  <div class="heading-right">
    <h1 style={{color: secondaryColor}} class={titleClass || ""}>{title}</h1>
    <span style={{color: secondaryColor}}>{subtitle}</span>
    <slot name="right" />
  </div>
</div>

<style>
  .heading {
    /* sizing */
    padding: 3rem 0;
    margin-bottom: 2rem;
    height: 500px;

    /* nesting */
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  .heading h1 {
    font-size: 2.5rem;
    margin: 0;
  }

  .heading span {
    font-size: 1.5rem;
  }

  .heading-left {
    display: flex;
    align-items: center;
  }

  .heading-right {
    text-align: left;
    padding: 1rem;
    margin-left: 1rem;
  }
</style>